<form method = "POST" action='/employees/<%=@employee.id%>'>
<input type = "hidden" name = "_method" value = "PATCH"/>

<div>
<label>First Name</label>
<input type = "text" name = "first_name" required="required" pattern="[A-Za-z]{1,20}">
</div>

<div>
<label>Last Name</label>
<input type = "text" name = "last_name" required="required" pattern="[A-Za-z]{1,20}">
</div>

<div>
<label>Alias</label>
<input type = "text" name = "alias" required="required" pattern="[A-Za-z]{1,20}">
</div>

<div>
<label>Office</label>
<input type = "text" name = "office" required="required" pattern="[A-Za-z]{1,20}">
</div>

<div>
<label>Image Url</label>
<input type = "text" name = "image_url" value = "<%=@employee.img_url%>">
</div>

<div>
<label>Title</label>
<input type = "text" name = "title" value = "<%=@employee.title%>">
</div>

<div>
    <label>Select A Dog</label>
    <select name = "dog_id" >
        <%@dogs.each do |dog|%>
            <option value = "<%=dog.id%>"><%=dog.name%></option>
            <%end%>
    </select>

</div>

<input type = "submit" value = "submit"/>

</form>